{
  "name": "ssm-parameters-boot",
  "version": "2.0.0",
  "description": "Edit parameters in CLI and store to aws ssm parameter store",
  "type": "module",
  "main": "./lib/src/index.js",
  "types": "./lib/src/index.d.ts",
  "exports": {
    "types": "./lib/src/index.d.ts",
    "import": "./lib/src/index.js",
    "default": "./index.cjs"
  },
  "files": [
    "lib/**/*",
    "index.cjs"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "lint": "xo --fix",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test:run": "node -r dotenv/config --loader ts-node/esm ./test/test-cli.ts",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/masahirompp/ssm-parameters-boot.git"
  },
  "license": "MIT",
  "author": {
    "name": "masahirompp",
    "email": "masahirompp@users.noreply.github.com",
    "url": "https://github.com/masahirompp"
  },
  "engines": {
    "node": ">=16.0"
  },
  "keywords": [
    "aws",
    "ssm",
    "typescript",
    "cli"
  ],
  "bugs": {
    "url": "https://github.com/masahirompp/ssm-parameters-boot/issues"
  },
  "homepage": "https://github.com/masahirompp/ssm-parameters-boot#readme",
  "devDependencies": {
    "@aws-sdk/client-ssm": "^3.159.0",
    "@types/inquirer": "^9.0.1",
    "@types/node": "^18.7.13",
    "commitizen": "^4.2.5",
    "construct-typed-parameters": "^4.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "semantic-release": "^19.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "xo": "^0.52.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "xo --fix"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-ssm": "^3.159.0",
    "construct-typed-parameters": "^4.0.1",
    "inquirer": "^9.1.0"
  }
}
